<AbsoluteLayout class="shadeCover">
    <FlexboxLayout justifyContent="space-around" alignItems="center" width="100%" height="100%">
        <GridLayout rows="auto,auto,auto" columns="auto,auto" class="modal-dialog">
            <Label row="0" col="0" colSpan="2" text="Select date" class="object-detail-subtitle" />
            <DatePicker row="1" col="0" colSpan="2" date="{{ dialogModel.expireDate }}" id="datePicker" />
            <Button row="2" col="0" text="Ok" tap="onDatePickerOk" />
            <Button row="2" col="1" text="Cancel" tap="onDatePickerCancel" />
        </GridLayout>
    </FlexboxLayout>
</AbsoluteLayout>