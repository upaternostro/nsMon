<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:objectButtons="widgets/object-buttons"
    xmlns:pluginOutput="widgets/plugin-output"
    xmlns:comments="widgets/comments">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="30,*" rows="auto,auto">
            <Label text="Host Details" colSpan="2" row="0" padding="0" />
            <Label text="{{ dateF(now, 'dd/MM/yyyy HH:mm:ss') }}" colSpan="2" row="1" fontSize="10" padding="0" />
            <Label class="fas" text="&#xf060;" tap="onBackButtonTap" col="0" rowSpan="2" />
        </GridLayout>
    </ActionBar>

    <RootLayout>
        <GridLayout columns="auto,*" rows="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto" class="page__content">
            <Label row="0" colSpan="2" class="{{ 'host-detail-title ' + (object.isOk ? 'host-ok' : 'host-critical' ) }}" text="{{ host.name }}" />
            <Label row="1" col="0" text="Hostname:" />
            <Label row="1" col="1" text="{{ host.name }}" />
            <Label row="2" col="0" text="IPv4:" />
            <Label row="2" col="1" text="{{ host.attrs.address }}" />
            <Label row="3" col="0" text="Acknowledged:" />
            <Label row="3" col="1" text="{{ object.isNotAcknowledged ? 'No' : 'Acknowledged' + (object.isStickyAcknowledged ? ' (Sticky)' : '') }}" />
            <objectButtons:buttons row="4" colSpan="2" />
            <Label row="5" colSpan="2" class="host-detail-subtitle" text="Check Execution" />
            <Label row="6" col="0" text="Command:" />
            <Label row="6" col="1" text="{{ host.attrs.check_command }}" />
            <Label row="7" col="0" text="Source:" />
            <Label row="7" col="1" text="{{ host.attrs.last_check_result.check_source }}" />
            <Label row="8" col="0" text="Zone:" />
            <Label row="8" col="1" text="{{ host.attrs.zone }}" />
            <Label row="9" col="0" text="Next check:" />
            <Label row="9" col="1" text="{{ dateF(new Date(host.attrs.next_check * 1000), 'dd/MM/yyyy HH:mm:ss') }}" />
            <Label row="10" col="0" text="Check interval:" />
            <Label row="10" col="1" text="{{ dateFD(dateI2D({ start: new Date(0), end: new Date(host.attrs.check_interval * 1000) })) }}"/>
            <Label row="11" col="0" text="Check attempts:" />
            <Label row="11" col="1" text="{{ host.attrs.check_attempt + '/' + host.attrs.max_check_attempts + ' (' + (object.isHardState ? 'hard' : 'soft') + ' state)' }}" />
            <Label row="12" col="0" text="Execution time:" />
            <Label row="12" col="1" text="{{ dateFD(dateI2D({ start: new Date(0), end: new Date((host.attrs.last_check_result.execution_end - host.attrs.last_check_result.execution_start) * 1000) })) }}"/>
            <Label row="13" col="0" text="Flapping:" />
            <Label row="13" col="1" text="{{ host.attrs.flapping ? 'Yes' : 'No' }}" />
            <pluginOutput:output row="14" colSpan="2" />
            <comments:comments row="15" colSpan="2" />
        </GridLayout>
    </RootLayout>
</Page>
